<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ConstraintPointMark"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.hiddentity.PointmarkActivity">

    <LinearLayout
        android:id="@+id/pointMarkLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/rojoInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/redButton"
                android:text="0"
                android:textSize="30dp"
                android:gravity="center"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/azulInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blueButton"
                android:textSize="30dp"
                android:text="0"
                android:gravity="center"
                android:textAlignment="center" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/greenButton">
            <TextView
                android:id="@+id/resumen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Resumen"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/listview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="casual"
                android:scrollbars="vertical" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="@+id/ConstraintPointMark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/nextTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:background="@color/greenButton"
            android:text="Siguiente equipo"/>
        <Button
            android:id="@+id/salir"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:background="@color/salir"
            android:text="Salir"/>

    </LinearLayout>




</android.support.constraint.ConstraintLayout>
