<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.hiddentity.PrincipalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/lineas"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="79dp">

            <ViewAnimator
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="341dp">

            </ViewAnimator>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="211dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="false"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/hiddentity"
                    tools:layout_editor_absoluteY="57dp" />

                <Button
                    android:id="@+id/btnJugar"
                    style="@android:style/Widget.Holo.Button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignStart="@id/imageView"
                    android:layout_below="@+id/imageView"
                    android:layout_marginStart="76dp"
                    android:layout_marginTop="104dp"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:text="Jugar"
                    android:textAllCaps="true"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnMazos"
                    style="@android:style/Widget.Holo.Button"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_alignTop="@id/btnJugar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:text="Personalizar"
                    android:textAllCaps="true"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnReglas"
                    style="@android:style/Widget.Holo.Button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignEnd="@+id/imageView"
                    android:layout_below="@+id/imageView"
                    android:layout_marginEnd="76dp"
                    android:layout_marginTop="104dp"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:text="Reglas"
                    android:textAllCaps="true"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="20dp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
