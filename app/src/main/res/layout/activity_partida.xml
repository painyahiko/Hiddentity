<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.david.hiddentity.PartidaActivity">

    <RelativeLayout
        android:id="@+id/partidaLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teamRed"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/rojoInfoPartida"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/redButton"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/azulInfoPartida"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blueButton"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textSize="30sp" />


        </LinearLayout>


        <TextView
            android:id="@+id/tiempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/personaje"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="99dp"
            android:fontFamily="casual"
            android:text="tiempo"
            android:textColor="@android:color/background_dark"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/personaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="personaje"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnsiguiente"
            style="@android:style/Widget.Button"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:background="@color/correcto"
            android:fontFamily="casual"
            android:text="Correcto"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPaso"
            style="@android:style/Widget.Button"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btnsiguiente"
            android:backgroundTint="@color/paso"
            android:fontFamily="casual"
            android:text="Paso"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="invisible" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
