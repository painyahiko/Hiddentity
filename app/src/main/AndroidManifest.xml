<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.david.hiddentity">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PrincipalActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar.TranslucentDecor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PointmarkActivity" />
        <activity android:name=".ReglasActivity" />
        <activity android:name=".PartidaActivity" />
        <activity android:name=".PersonalizarActivity" />
        <activity android:name=".ParametrosActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".CreateDeckActivity"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>